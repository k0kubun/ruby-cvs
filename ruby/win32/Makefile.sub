.c.obj:
	$(CC) $(CFLAGS) $(CPPFLAGS) -c $<
{$(srcdir)}.c{}.obj:
 	$(CC) -I. -I$(<D) $(CFLAGS) $(CPPFLAGS) -c $(<:/=\)
{$(srcdir)/missing}.c{}.obj:
 	$(CC) -I. -I$(<D) $(CFLAGS) $(CPPFLAGS) -c $(<:/=\)
{$(srcdir)/win32}.c{}.obj:
 	$(CC) -I. -I$(<D) $(CFLAGS) $(CPPFLAGS) -c $(<:/=\)

.rc.res:
	$(RC) -I. -I$(<D) -I$(srcdir)/win32 $(RFLAGS) -fo$@ $<

parse.c: $(srcdir)/parse.y
	$(YACC) $(YFLAGS) $(srcdir)/parse.y
	sed -e "s!^extern char \*getenv();!/* & */!" y.tab.c > parse.c
	@rm y.tab.c

